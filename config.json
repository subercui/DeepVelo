{
    "name": "DeepVelo_Base",
    "n_gpu": 1,

    "arch": {
        "type": "VeloModel",
        "args": {
            "n_genes": 1999, 
            "layers": [256, 64]
        }
    },
    "data_loader": {
        "type": "VeloDataLoader",
        "args":{
            "data_dir": "./data/scveloDG.npz",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "mse"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 120,

        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}

{
    "name": "DeepVelo_Base",
    "n_gpu": 1,

    "arch": {
        "type": "VeloGCN",
        "args": {
            "n_genes": 2001, 
            "layers": [64, 64]
        }
    },
    "data_loader": {
        "type": "VeloDataLoader",
        "args":{
            "data_dir": "./data/DG_norm_genes.npz",
            "batch_size": 128,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2,
            "type": "average",
            "topC": 30,
            "topG": 16
        }
    },
    "online_test": "velo_mat_E10-12.npz",
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "constraint_loss": false,
    "mask_zeros": true,
    "metrics": [
        "mse"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,

        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
